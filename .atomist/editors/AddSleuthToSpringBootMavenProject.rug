@description "Adds Spring Cloud Sleuth to am existing Spring Boot project"
@tag "spring"
@tag "spring-boot"
@tag "spring-cloud"
@tag "maven"
@tag "java"
editor AddSleuthToSpringBootMavenProject

precondition IsSpringBoot
precondition IsMaven

let spring_sleuth_core_dependency = """<dependency>
<groupId>org.springframework.cloud</groupId>
<artifactId>spring-cloud-sleuth-core</artifactId>
</dependency>
"""

let spring_sleuth_starter_dependency = """<dependency>
   <groupId>org.springframework.cloud</groupId>
   <artifactId>spring-cloud-starter-sleuth</artifactId>
</dependency>
"""

with Pom
  begin
    do addOrReplaceDependency "org.springframework.cloud" "spring-cloud-sleuth-core"
    do addOrReplaceDependency "org.springframework.cloud" "spring-cloud-starter-sleuth"
  end
